<UserControl x:Class="BudgetPlanner.App.Views.TransactionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Upravljanje Transakcijama" FontSize="20"
                  FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Filter Panel -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="10" Margin="0,0,0,10" CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Filteri" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Od datuma:" Style="{StaticResource FormLabel}"/>
                        <DatePicker SelectedDate="{Binding FilterStartDate}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Do datuma:" Style="{StaticResource FormLabel}"/>
                        <DatePicker SelectedDate="{Binding FilterEndDate}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Kategorija:" Style="{StaticResource FormLabel}"/>
                        <ComboBox ItemsSource="{Binding AllCategories}"
                                 SelectedItem="{Binding FilterCategory}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding GetCategoryType}" Foreground="Gray" FontSize="10"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="3" Content="Očisti filtere" Command="{Binding ClearFiltersCommand}"
                           VerticalAlignment="Bottom" Padding="10,5" Background="#757575" Foreground="White"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Transactions}"
                 SelectedItem="{Binding SelectedTransaction}"
                 Style="{StaticResource ModernDataGrid}" Margin="0,0,0,20"
                 CanUserSortColumns="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Datum" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Kategorija" Binding="{Binding Category.Name}" Width="150"/>
                <DataGridTextColumn Header="Tip" Binding="{Binding GetTransactionType}" Width="80"/>
                <DataGridTextColumn Header="Iznos" Binding="{Binding Amount, StringFormat=C}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Form -->
        <Border Grid.Row="3" Background="#F5F5F5" Padding="15" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Red 1 -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Tip" Style="{StaticResource FormLabel}"/>
                    <ComboBox SelectedValue="{Binding TransactionType}" SelectedValuePath="Tag">
                        <ComboBoxItem Content="Prihod" Tag="Income"/>
                        <ComboBoxItem Content="Rashod" Tag="Expense" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                    <TextBlock Text="Kategorija" Style="{StaticResource FormLabel}"/>
                    <ComboBox ItemsSource="{Binding Categories}" 
                             SelectedItem="{Binding SelectedCategory}"
                             DisplayMemberPath="Name"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,10,10">
                    <TextBlock Text="Iznos" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Amount}" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                
                <!-- Red 2 -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,10,10">
                    <TextBlock Text="Opis" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Description}" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,10,10">
                    <TextBlock Text="Datum" Style="{StaticResource FormLabel}"/>
                    <DatePicker SelectedDate="{Binding Date}"/>
                </StackPanel>
                
                <!-- Dugmad -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" 
                           Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Dodaj" Command="{Binding AddTransactionCommand}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Ažuriraj" Command="{Binding UpdateTransactionCommand}"
                           Background="{StaticResource AccentBrush}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Obriši" Command="{Binding DeleteTransactionCommand}"
                           Background="{StaticResource ErrorBrush}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Očisti" Command="{Binding ClearFormCommand}"
                           Background="#757575"
                           Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
