<Window x:Class="BudgetPlanner.App.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewmodels="clr-namespace:BudgetPlanner.App.ViewModels"
        xmlns:views="clr-namespace:BudgetPlanner.App.Views"
        Title="Budget Planner - Glavni Panel" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <!-- DataTemplate za TransactionViewModel -->
        <DataTemplate DataType="{x:Type viewmodels:TransactionViewModel}">
            <views:TransactionView/>
        </DataTemplate>
        
        <!-- DataTemplate za CategoryViewModel -->
        <DataTemplate DataType="{x:Type viewmodels:CategoryViewModel}">
            <views:CategoryView/>
        </DataTemplate>
        
        <!-- DataTemplate za BudgetViewModel -->
        <DataTemplate DataType="{x:Type viewmodels:BudgetViewModel}">
            <views:BudgetView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ’°" FontSize="24" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Budget Planner" FontSize="20" FontWeight="Bold" 
                              Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding CurrentUser.FullName}" Foreground="White" 
                              FontSize="14" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Odjavi se" Command="{Binding LogoutCommand}"
                           Background="{StaticResource ErrorBrush}" Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Dashboard -->
        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" 
                Padding="20" Margin="20,20,20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Prihodi -->
                <Border Grid.Column="0" Background="#E8F5E9" Padding="15" Margin="0,0,10,0" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ Ukupni Prihodi" FontSize="14" Foreground="#2E7D32" FontWeight="Medium"/>
                        <TextBlock Text="{Binding TotalIncome, StringFormat=C}" 
                                  FontSize="24" FontWeight="Bold" Foreground="#2E7D32" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Rashodi -->
                <Border Grid.Column="1" Background="#FFEBEE" Padding="15" Margin="0,0,10,0" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‰ Ukupni Rashodi" FontSize="14" Foreground="#C62828" FontWeight="Medium"/>
                        <TextBlock Text="{Binding TotalExpenses, StringFormat=C}" 
                                  FontSize="24" FontWeight="Bold" Foreground="#C62828" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Bilans -->
                <Border Grid.Column="2" Background="#E3F2FD" Padding="15" CornerRadius="4">
                    <StackPanel>
                        <TextBlock Text="ðŸ’µ Bilans" FontSize="14" Foreground="#1565C0" FontWeight="Medium"/>
                        <TextBlock Text="{Binding Balance, StringFormat=C}" 
                                  FontSize="24" FontWeight="Bold" Foreground="#1565C0" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar Menu -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" 
                    Padding="15" Margin="0,0,10,0" CornerRadius="4">
                <StackPanel>
                    <Button Content="ðŸ“Š Transakcije" Command="{Binding ShowTransactionsCommand}"
                           HorizontalAlignment="Stretch" Margin="0,0,0,10"
                           Style="{StaticResource PrimaryButton}"/>
                    <Button Content="ðŸ“ Kategorije" Command="{Binding ShowCategoriesCommand}"
                           HorizontalAlignment="Stretch" Margin="0,0,0,10"
                           Style="{StaticResource PrimaryButton}"/>
                    <Button Content="ðŸ’¼ BudÅ¾eti" Command="{Binding ShowBudgetsCommand}"
                           HorizontalAlignment="Stretch" Margin="0,0,0,10"
                           Style="{StaticResource PrimaryButton}"/>
                    <Button Content="ðŸ“ˆ IzveÅ¡taji" Command="{Binding ShowReportsCommand}"
                           HorizontalAlignment="Stretch" Margin="0,0,0,20"
                           Style="{StaticResource PrimaryButton}"/>
                    
                    <Separator Margin="0,0,0,10"/>
                    
                    <Button Content="ðŸ’¾ Export" Command="{Binding ExportDataCommand}"
                           HorizontalAlignment="Stretch" Margin="0,0,0,10"
                           Background="{StaticResource SuccessBrush}"
                           Style="{StaticResource PrimaryButton}"/>
                    <Button Content="ðŸ“¥ Import" Command="{Binding ImportDataCommand}"
                           HorizontalAlignment="Stretch" Margin="0,0,0,10"
                           Background="{StaticResource AccentBrush}"
                           Style="{StaticResource PrimaryButton}"/>
                    <Button Content="ðŸ“„ PDF IzveÅ¡taj" Command="{Binding GenerateReportCommand}"
                           HorizontalAlignment="Stretch"
                           Background="#673AB7"
                           Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Border>
            
            <!-- Content Area -->
            <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" 
                    Padding="20" CornerRadius="4">
                <ContentControl Content="{Binding CurrentViewModel}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
