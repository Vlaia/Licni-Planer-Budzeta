<UserControl x:Class="BudgetPlanner.App.Views.BudgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Upravljanje Budžetima" FontSize="20" 
                  FontWeight="Bold" Margin="0,0,0,20"/>
        
        <DataGrid Grid.Row="1" ItemsSource="{Binding Budgets}"
                 SelectedItem="{Binding SelectedBudget}"
                 Style="{StaticResource ModernDataGrid}" Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kategorija" Binding="{Binding Category.Name}" Width="200"/>
                <DataGridTextColumn Header="Period" Binding="{Binding GetPeriod}" Width="100"/>
                <DataGridTextColumn Header="Planirano" Binding="{Binding PlannedAmount, StringFormat=C}" Width="150"/>
                <DataGridTextColumn Header="Godina" Binding="{Binding Year}" Width="80"/>
                <DataGridTextColumn Header="Mesec" Binding="{Binding Month}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Kategorija rashoda" Style="{StaticResource FormLabel}"/>
                    <ComboBox ItemsSource="{Binding ExpenseCategories}" 
                             SelectedItem="{Binding SelectedCategory}"
                             DisplayMemberPath="Name"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                    <TextBlock Text="Planirani iznos" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding PlannedAmount}" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,10,10">
                    <TextBlock Text="Mesec" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Month}" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="3" Margin="0,0,0,10">
                    <TextBlock Text="Godina" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Year}" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" 
                           Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Dodaj" Command="{Binding AddBudgetCommand}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Ažuriraj" Command="{Binding UpdateBudgetCommand}"
                           Background="{StaticResource AccentBrush}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Obriši" Command="{Binding DeleteBudgetCommand}"
                           Background="{StaticResource ErrorBrush}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Očisti" Command="{Binding ClearFormCommand}"
                           Background="#757575"
                           Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
