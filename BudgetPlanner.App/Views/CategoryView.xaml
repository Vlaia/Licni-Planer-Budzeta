<UserControl x:Class="BudgetPlanner.App.Views.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Upravljanje Kategorijama" FontSize="20" 
                  FontWeight="Bold" Margin="0,0,0,20"/>
        
        <DataGrid Grid.Row="1" ItemsSource="{Binding Categories}"
                 SelectedItem="{Binding SelectedCategory}"
                 Style="{StaticResource ModernDataGrid}" Margin="0,0,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Tip" Binding="{Binding GetCategoryType}" Width="100"/>
                <DataGridTextColumn Header="Boja" Binding="{Binding Color}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                    <TextBlock Text="Naziv" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Name}" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                    <TextBlock Text="Tip" Style="{StaticResource FormLabel}"/>
                    <ComboBox SelectedValue="{Binding CategoryType}" SelectedValuePath="Tag">
                        <ComboBoxItem Content="Prihod" Tag="Income"/>
                        <ComboBoxItem Content="Rashod" Tag="Expense" IsSelected="True"/>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                    <TextBlock Text="Boja" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Color}" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
                    <TextBlock Text="Opis" Style="{StaticResource FormLabel}"/>
                    <TextBox Text="{Binding Description}" Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
                
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                           Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Dodaj" Command="{Binding AddCategoryCommand}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Ažuriraj" Command="{Binding UpdateCategoryCommand}"
                           Background="{StaticResource AccentBrush}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Obriši" Command="{Binding DeleteCategoryCommand}"
                           Background="{StaticResource ErrorBrush}"
                           Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                    <Button Content="Očisti" Command="{Binding ClearFormCommand}"
                           Background="#757575"
                           Style="{StaticResource PrimaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
